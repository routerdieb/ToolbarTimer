{
  "name": "TopTimer",
  "version": "0.0.4",
  "manifest_version": 3,
  "description": "TopTimer is a
   timer for sites. Especially for evernote, notion, kanban boards.
  ",

  "content_scripts": [
    {
      "matches": ["https://evernote.com/*", "https://www.evernote.com/*","https://notion.so/*","https://www.notion.so/*","https://www.focusmate.com/*"],
      "css": ["/css/style.css"],
      "js": ["js/jquery-3.6.0.slim.min.js","js/options.js", "js/script.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources":["media/engine-start.mp3","media/ring.mp3","media/calendar-icon.png",
		"media/gear-icon.png","media/engine-start.mp3","media/ring.mp3"],
	"matches": ["<all_urls>"],
       "extension_ids": []
  }],
  "permissions": ["storage"]
}
