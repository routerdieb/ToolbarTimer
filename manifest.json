{
  "name": "Toolbar Timer",
  "version": "0.4.0",
  "manifest_version": 3,
  "description": "A Timer for almost every Website. Especially useful for meetings discussing results in evernote, notion, kanban boards or a Github codereview. Useful to track time effectivly.",
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["https://*/*","http://*/*","file://*/*"],
      "js": ["js/jquery-3.6.0.slim.min.js","js/loadStore.js","js/messageHelper.js","js/options.js","js/inject_iframe.js"],
	  "css": ["/css/style.css","css/errorDiv.css"],
	  "run_at":"document_start"
    },
	{
		"matches": ["https://*/*","http://*/*","file://*/*"],
		"js": ["js/jquery-3.6.0.slim.min.js","js/messageHelper.js","js/href_target_top.js"],
		"all_frames": true,
		"run_at":"document_start"
	}
  ],
  "web_accessible_resources": [{
    "resources":["media/engine-start.mp3","media/ring.mp3","media/calendar-icon.png",
		"media/gear-icon.png","css/styles.css","html/options.html","html/extension_iframe.html"],
	"css":["css/styles.css"],
	"matches": ["<all_urls>"],
       "extension_ids": []
  }],
  "permissions": ["storage","declarativeNetRequest","webRequest"],
   "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
   "icons": { "64": "media/icon64.png"},
   "declarative_net_request" : {
    "rule_resources" : [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules_1.json"
   }]
   }
}

